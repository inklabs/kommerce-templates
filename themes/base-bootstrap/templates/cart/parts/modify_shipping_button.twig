{# @var cart \inklabs\kommerce\EntityDTO\CartDTO #}

{% set class = 'btn btn-info btn-sm ' ~ extraClass %}

{% if env.shippingType.isFlatRate %}
    <a href="/cart/estimate-tax" class="{{ class }} estimate-tax">
        {% if cart.shipmentRate.rate.amount is null %}
            Estimate Tax
        {% else %}
            Modify Zipcode
        {% endif %}
    </a>
{% else %}
    <a href="/cart/estimate-shipping" class="{{ class }} estimate-shipping">
        {% if cart.shipmentRate.rate.amount is null %}
            Estimate Shipping & Tax
        {% else %}
            Modify Shipping
        {% endif %}
    </a>
{% endif %}
