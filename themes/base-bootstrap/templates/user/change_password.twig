{% extends "layout/base.twig" %}

{% block pageTitle %}User Account - Change Password{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-1">
                <h2>Change Password</h2>
                <p>
                    Enter your new password below.
                </p>
            </div>
        </div>
        <br>
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <form action="/user/change-password"
                      method="post"
                      id="change-password"
                      class="form"
                      role="form">
                    <input type="hidden" name="_token" value="{{ CSRF_TOKEN }}">

                    <div class="form-group">
                        <label for="passwordNew" class="control-label">New password:</label>
                        <input type="password"
                               id="passwordNew"
                               name="passwordNew"
                               value=""
                               class="form-control"
                               required=""
                               autofocus="">
                    </div>

                    <div class="form-group">
                        <label for="passwordCheck" class="control-label">Re-enter new password:</label>
                        <input type="password"
                               id="passwordCheck"
                               name="passwordCheck"
                               value=""
                               class="form-control"
                               required="">
                    </div>

                    <button type="submit" class="btn btn-success">Continue <i class="fa fa-arrow-circle-right"></i></button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
