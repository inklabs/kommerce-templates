    'entityName': 'coupon',
    'entityAttribute': 'start',
    'timestamp': coupon.start.timestamp,
    'defaultTime': '01:00am'
} only %}
{% include '@theme/admin/promotion/parts/date-time-timzeone-input.twig' with {
