{# @var option \inklabs\kommerce\EntityDTO\OptionDTO #}
{% extends '@theme/layout/base-admin.twig' %}

{% block pageTitle %}Option Products - {{ option.name }}{% endblock %}

{% block content %}
    <div class="container">

        {% include '@theme/admin/option/parts/header.twig' %}

        <div class="row">
            <div class="col-sm-12">
                <br>

                {% embed '@theme/admin/option/parts/option-product-list.twig' with {'optionProducts': option.optionProducts} %}
                    {% block thead %}
                        <th class="text-right">Actions</th>
                    {% endblock %}
                    {% block tbody %}
                        <td>
                            <form action="{{ routeUrl('admin.option.delete-option-product') }}"
                                  method="post"
                                  class="form pull-right">
                                {{ form.csrf() }}
                                {{ form.hidden('optionId', option.id.hex) }}
                                {{ form.hidden('optionProductId', optionProduct.id.hex) }}

                                <button type="submit" class="btn btn-danger btn-xs" title="Remove Product"><i class="fa fa-minus"></i></button>
                            </form>
                        </td>
                    {% endblock %}
                {% endembed %}

                <h4>Add Product:</h4>
                <form action="{{ routeUrl('admin.option.add-option-product') }}"
                      method="post">
                    {{ form.csrf() }}
                    {{ form.hidden('optionId', option.id.hex) }}

                    <div class="input-group col-sm-4">
                        <input type="text"
                               name="productId"
                               value=""
                               class="form-control typeahead"/>

                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-plus"></i> Add</button>
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
