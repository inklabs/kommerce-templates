<div class="row form-group">
    <label class="control-label col-sm-3" for="{{ entityName }}-{{ entityAttribute }}Date">{{ label }}</label>
    <div class="col-sm-3">
        <input type="text"
           id="{{ entityName }}-{{ entityAttribute }}-date"
           name="{{ entityName }}[{{ entityAttribute }}][date]"
           placeholder="mm/dd/yyyy"
           value="{{ timestamp|formatInputDate }}"
           class="form-control"/>
    </div>
    <div class="col-sm-2">
        <input type="text"
           id="{{ entityName }}-{{ entityAttribute }}-time"
           name="{{ entityName }}[{{ entityAttribute }}][time]"
           placeholder="ex: 8:30pm"
           value="{{ timestamp|formatInputTime|default(defaultTime) }}"
           class="form-control"/>
    </div>
    <div class="col-sm-4">
        <select name="{{ entityName }}[{{ entityAttribute }}][timezone]" class="form-control input-sm">
            {% for timezone, name in getTimezones() %}
                <option value="{{ timezone }}"{% if config.timezone == timezone %} selected="selected"{% endif %}>{{ name }}</option>
            {% endfor %}
        </select>
    </div>
</div>
