<div class="form-group col-sm-3">
    <label for="taxRate-{{ taxRate.id.hex }}-rate" class="control-label">Rate</label>
    <div class="input-group">
        <input type="text"
               id="taxRate-{{ taxRate.id.hex }}-rate"
               name="taxRate[{{ taxRate.id.hex }}][rate]"
               value="{{ taxRate.rate|floatPercent }}"
               class="form-control"
               maxlength="5"
               required=""/>
        <span class="input-group-addon">%</span>
    </div>
</div>

<div class="form-group col-sm-4">
    <label for="taxRate-{{ taxRate.id.hex }}-applyToShipping" class="control-label">Apply to Shipping</label>
    <div class="clearfix"></div>
    {{ form.checkbox(
        'taxRate[' ~ taxRate.id.hex ~ '][applyToShipping]',
        taxRate.applyToShipping,
        'taxRate-' ~ taxRate.id.hex ~ '-applyToShipping'
    ) }}
</div>
<div class="form-group col-sm-1">
    <form action="{{ routeUrl('admin.settings.sales-tax.delete') }}"
          method="post"
          class="form pull-right">
        {{ form.csrf() }}
        {{ form.hidden('taxRateId', taxRate.id.hex) }}

        <button type="submit" class="btn btn-danger btn-xs" title="Delete Tax Rate"><i class="fa fa-remove"></i></button>
    </form>
</div>
