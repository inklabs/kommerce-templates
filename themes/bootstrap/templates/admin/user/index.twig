{# @var pagination \inklabs\kommerce\EntityDTO\PaginationDTO #}
{# @var queryString string #}
{% extends '@theme/layout/base-admin.twig' %}

{% block pageTitle %}Users{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1>Users</h1>
                <form action="{{ routeUrl('admin.user') }}"
                      method="get"
                      class="form-search">
                    {% include '@theme/helper/search-bar.twig' with {'placeholder': 'Search Name/Email', 'queryString': queryString} only %}
                </form>

                {{ paginate.detailed(pagination) }}

                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>External ID</th>
                            <th>Name</th>
                            <th>email</th>
                            <th>logins</th>
                            <th>Last Login</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>
                                    {% if user.externalId is not null %}
                                        {{ user.externalId }}
                                    {% else %}
                                        <span class="text-muted small">[none]</span>
                                    {% endif %}
                                </td>
                                <td>{{ user.firstName }} {{ user.lastName }}</td>
                                <td>{{ user.email }}</td>
                                <td>{{ user.totalLogins }}</td>
                                <td>{{ user.lastLogin | formatDate }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                {{ paginate.detailed(pagination) }}
            </div>
        </div>
    </div>
{% endblock %}
