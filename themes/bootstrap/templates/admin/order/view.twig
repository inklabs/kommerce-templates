{# @var order \inklabs\kommerce\EntityDTO\OrderDTO #}
{% extends 'layout/base-admin.twig' %}

{% block pageTitle %}Order #{{ order.referenceNumber }}{% endblock %}

{% block content %}
    <div class="container">

        {% include 'admin/order/navigation.twig' %}

        <div class="row">
            <div class="col-sm-12">
                <h2>Order Details</h2>
                Ordered on {{ order.created | formatDate }}
                |
                Order #{{ order.referenceNumber }}
                |
                {{ orderStatus.label(order) }}
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="well">
                    <div class="row">
                        <div class="col-sm-4">
                            <strong>Shipping Address</strong>
                            {% include 'helper/billing-address.twig' with {'address': order.shippingAddress} only %}
                            <hr>
                            <strong>Billing Address</strong>
                            {% include 'helper/billing-address.twig' with {'address': order.billingAddress} only %}

                        </div>
                        <div class="col-sm-4">
                            <strong>Payment Information</strong>
                            <div>
                                {% include 'helper/order-payments.twig' %}
                            </div>
                            <hr>
                            <strong>Chosen Shipping Option</strong>
                            <div>
                                {% include 'helper/order-shipment-rate.twig' with {'shipmentRate': order.shipmentRate} only %}
                                <?=View::factory('admin/order/shipment_rate')?>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <strong>Order Summary</strong>
                            <table class="table table-condensed totals-table">
                                <tbody>
                                <tr>
                                    <td>Subtotal:</td>
                                    <td class="text-right">
                                        {{ order.total.subtotal | displayPrice }}
                                    </td>
                                </tr>
                                <tr>
                                    <td>Shipping:</td>
                                    <td class="text-right">
                                        {{ order.total.shipping | displayPrice }}
                                    </td>
                                </tr>
                                {% if order.total.discount > 0 %}
                                    <tr class="cart-discounts">
                                        <td>Discounts:</td>
                                        <td class="text-right">
                                            (
                                                {{- order.total.discount | displayPrice -}}
                                            )
                                        </td>
                                    </tr>
                                {% endif %}
                                <tr>
                                    <td>Tax:</td>
                                    <td class="text-right">
                                        {{ order.total.tax | displayPrice }}
                                    </td>
                                </tr>
                                <tr class="cart-total-price info">
                                    <td>Total:</td>
                                    <td class="text-right">
                                        {{ order.total.total | displayPrice }}
                                    </td>
                                </tr>
                                </tbody>
                            </table>

                            <hr>
                            <strong>Discounts</strong>
                            <div>
                                {% if order.discountNames is empty %}
                                    n/a
                                {% else %}
                                    {{ order.discountNames }}
                                {% endif %}
                            </div>

                            <hr>
                            <strong>Tax Rate</strong>
                            <div>
                                {% if order.taxRate is empty %}
                                    n/a
                                {% else %}
                                    Rate: {{ order.taxRate.rate | displayPrice }}<br>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th></th>
                            <th class="text-right">Qty</th>
                            <th class="text-right hidden-xxs">Unit Price</th>
                            <th class="text-right">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for orderItem in order.orderItems %}
                            <tr>
                                <td style="width: 75px">
                                    {% if orderItem.product is not null %}
                                        <img src="{{ productImageUrl(orderItem.product) }}">
                                    {% endif %}
                                </td>
                                <td>
                                    {% if orderItem.product is not null %}
                                        <a href="{{ productUrl(orderItem.product) }}">{{ orderItem.name }}</a>
                                    {% else %}
                                        {{ orderItem.name | nl2br }}
                                    {% endif %}
                                    <span class="small text-muted">{{ orderItem.sku }}</span><br>

                                    {% include 'helper/order-item-options.twig' with {'orderItem': orderItem} only %}

                                    {# TODO: Attachments
                                    <div class="row">
                                        <?php foreach ($orderItem->attachments as $attachment) { ?>
                                            <div class="col-md-4">
                                                <div class="thumbnail" style="height: 180px">
                                                    <img src="<?=$attachment->uri?>" style="max-width: 150px; max-height: 150px" />
                                                    <br>
                                                    <?=Form::open('admin/attachment/deleteAttachment', [
                                                        'id' => 'deleteAttachment',
                                                        'method' => 'POST',
                                                        'class' => 'form-inline',
                                                    ])?>
                                                        <?=Form::csrf()?>
                                                        <input type="hidden" name="attachmentId" value="<?=$attachment->id->getHex()?>" />
                                                        <input type="hidden" name="orderId" value="<?=$order->id->getHex()?>" />
                                                        <button type="submit" class="btn btn-danger btn-xs">
                                                            <i class="glyphicon glyphicon-remove-sign"></i> Remove
                                                        </button>
                                                    <?=Form::close()?>
                                                </div>
                                            </div>
                                        <?php } ?>
                                    </div>
                                    <div class="clear"></div>
                                    <?php if ($orderItem->areAttachmentsEnabled) { ?>
                                        <?=HTML::anchor($orderItem->adminAttachmentForOrderItemUrl, '<i class="glyphicon glyphicon-plus-sign"></i> Upload Attachment', [
                                            'class' => 'btn btn-xs btn-success upload-attachment',
                                        ])?>
                                    <?php } ?>
                                    #}

                                    <div class="visible-xs">
                                        <br>
                                        {% include 'helper/unit-price.twig' with {
                                            'price': orderItem.price,
                                            'discountNames': orderItem.discountNames
                                        } only %}
                                    </div>
                                </td>
                                <td class="text-right">
                                    {{ orderItem.quantity}}
                                </td>
                                <td class="text-right hidden-xs">
                                    {% include 'helper/unit-price.twig' with {
                                        'price': orderItem.price,
                                        'discountNames': orderItem.discountNames
                                    } only %}
                                </td>
                                <td class="text-right">
                                    {{ orderItem.price.quantityPrice | displayPrice }}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
