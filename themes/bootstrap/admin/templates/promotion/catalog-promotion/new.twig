{% extends '@admin/layout/base.twig' %}

{% block pageTitle %}New Catalog Promotion{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h3>New Catalog Promotion</h3>
                <form action="{{ routeUrl('admin.catalog-promotion.new.post') }}"
                      method="post"
                      class="form-horizontal"
                      role="form">
                    <fieldset>
                        {{ form.csrf() }}
                        <div class="well">
                            {% include '@admin/promotion/catalog-promotion/parts/catalog-promotion-input-fields.twig' %}
                        </div>

                        <div class="well">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-check-circle"></i> Create
                            </button>
                            <a href="{{ routeUrl('admin.catalog-promotion') }}" class="btn btn-default">Cancel</a>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
