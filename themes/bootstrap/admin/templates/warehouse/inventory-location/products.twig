{# @var inventoryLocation \inklabs\kommerce\EntityDTO\InventoryLocationDTO #}
{# @var products \inklabs\kommerce\EntityDTO\Products #}
{# @var productStockDTOs \inklabs\kommerce\DTO\ProductStockDTO[] #}
{% extends '@admin/layout/base.twig' %}

{% block pageTitle %}Product Stock - {{ inventoryLocation.name }}{% endblock %}

{% block content %}
    <div class="container">

        {% include '@admin/warehouse/inventory-location/parts/header.twig' %}

        <div class="row">
            <div class="col-sm-12">
                <br>
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Stock</th>
                                {% include '@admin/product/parts/product-list-head.twig' %}
                            </tr>
                        </thead>
                        <tbody>
                            {% for productStockDTO in productStockDTOs %}
                                <tr>
                                    <td class="lead"><strong>{{ productStockDTO.quantity }}</strong></td>
                                    {% include '@admin/product/parts/product-list-body.twig' with {'product': productStockDTO.productDTO} %}
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="100%">
                                        <span class="text-muted">No products.</span>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
            </div>
        </div>
    </div>
{% endblock %}
