{# @var tags \inklabs\kommerce\EntityDTO\TagDTO[] #}
<table class="table table-condensed">
    <thead>
        <tr>
            <td></td>
            <th>Name</th>
            <th>Sort Order</th>
            {% block thead %}{% endblock %}
        </tr>
    </thead>
    <tbody>
        {% for tag in tags %}
            <tr>
                <td>
                    <a href="{{ adminTagUrl(tag) }}">
                        {% if tag.defaultImage is null %}
                            <div style="width: 50px; height: 50px;"></div>
                        {% else %}
                            <img src="{{ tagImageUrl(tag) }}"
                                 width="50"
                                 height="50"
                                 style="width: 50px; height: 50px;">
                        {% endif %}
                    </a>
                </td>
                <td>
                    <a href="{{ adminTagUrl(tag) }}">
                        {{ tag.name }}
                    </a>
                <td>{{ tag.sortOrder }}</td>
                {% block tbody %}{% endblock %}
            </tr>
        {% else %}
            <tr>
                <td colspan="100%">
                    <span class="text-muted">No tags.</span>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
