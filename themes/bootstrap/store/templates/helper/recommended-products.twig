{% if products is not empty %}
    <div class="row">
        <div class="col-sm-12">
            <hr />
            <h2 class="text-center">{% block title %}You Might Also Like{% endblock %}</h2>
            {% if size == 'small' %}
                {% include '@store/helper/product-grid-small.twig' with {'products': products } only %}
            {% else %}
                {% include '@store/helper/product-grid.twig' with {'products': products } only %}
            {% endif %}
        </div>
    </div>
{% endif %}
