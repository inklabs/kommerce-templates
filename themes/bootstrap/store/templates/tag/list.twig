{# @var tags \inklabs\kommerce\EntityDTO\TagDTO[] #}
{# @var pagination \inklabs\kommerce\EntityDTO\PaginationDTO #}
{% extends '@store/layout/base.twig' %}

{% block pageTitle %}Tags{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <h1>Tags</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                {% if tags is empty %}
                    No tags
                {% else %}
                    {% include '@store/helper/pagination/pagination-detailed.twig' with {'pagination': pagination} only %}

                    {% include '@store/helper/tag-grid.twig' with {'tags': tags } only %}

                    <div class="clearfix"></div>
                    {% include '@store/helper/pagination/pagination-detailed.twig' with {'pagination': pagination} only %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
