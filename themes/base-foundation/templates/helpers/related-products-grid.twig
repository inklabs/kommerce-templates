{% for product in products %}

    <h4>{{ product.name }}</h4>

    <a href="{{ productUrl(product) }}">{{ productUrl(product) }}</a>

    {% if product.defaultImage is empty %}
        <img src="//placehold.it/100x100">
    {% else %}
        <img src="{{ product.defaultImage }}">
    {% endif %}

    {% if product.isInStock %}
        <p>Out of Stock</p>
    {% elseif product.isPriceVisible %}
        <p>{{ product.price.quantityPrice | displayPrice }}</p>
    {% endif %}

{% endfor %}
