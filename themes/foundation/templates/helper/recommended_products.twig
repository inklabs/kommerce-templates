{% if products is not empty %}
    <h2>{% block title %}You Might Also Like{% endblock %}</h2>
    {% if size == 'small' %}
        {% embed '@theme/helper/product-grid-small.twig' with {'products': products } only %}
        {% endembed %}
    {% else %}
        {% embed '@theme/helper/product-grid.twig' with {'products': products } only %}
        {% endembed %}
    {% endif %}
{% endif %}
