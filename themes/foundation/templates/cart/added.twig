{# @var cart \inklabs\kommerce\EntityDTO\CartDTO #}
{# @var cartItem \inklabs\kommerce\EntityDTO\CartItemDTO #}
{# @var recommendedProducts \inklabs\kommerce\EntityDTO\ProductDTO[] #}
{% extends '@theme/layout/base.twig' %}

{% block pageTitle %}{{ cartItem.product.name }}{% endblock %}

{% block content %}
    <a href="{{ productUrl(cartItem.product) }}">
        <img src="{{ productImageUrl(cartItem.product) }}" width="110" height="110"/>
    </a>

    <h2>
        <a href="{{ productUrl(cartItem.product) }}">{{ cartItem.product.name }}</a>
    </h2>

    <div>
        {% include '@theme/helper/rating-stars.twig' with {'rating': cartItem.product.rating } only %}
    </div>

    <p>Quantity in cart: {{ cartItem.quantity }}</p>

    <div>
        {% include '@theme/helper/price.twig' with {'price': cartItem.price } only %}
    </div>

    <a href="/cart">View Cart</a>

    <div>
        {% include '@theme/helper/checkout-button.twig' only %}
    </div>

    <p>Order subtotal:</p>
    <p>{{ cart.cartTotal.subtotal | displayPrice }}</p>
    <p>{{ cart.totalItems }}</p>

    {% trans %}
    <p>item in your Cart</p>
    {% plural cart.totalItems %}
    <p>items in your Cart</p>
    {% endtrans %}

    {% embed '@theme/helper/recommended-products.twig' with {'products': recommendedProducts } only %}
        {% block title %}Recommended for you{% endblock %}
    {% endembed %}

{% endblock %}
