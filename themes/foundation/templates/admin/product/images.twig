{# @var product \inklabs\kommerce\EntityDTO\ProductDTO #}
{% extends '@theme/layout/base-admin.twig' %}

{% block pageTitle %}Product Images - {{ product.name }}{% endblock %}

{% block content %}

    {% include '@theme/admin/product/parts/header.twig' %}

    <div class="row column">

        {% for image in product.images %}
            <div class="medium-4 columns">
                <div class="thumbnail">
                    <div class="text-center" style="height: 160px;">
                        <img src="{{ imageUrl(image) }}" style="max-width: 100%; max-height: 100%;" />
                    </div>
                    <br />
                    <p>
                        {% include '@theme/admin/product/parts/set-default-image.twig' %}

                        <br>
                        <form action="{{ routeUrl('admin.product.remove-image') }}"
                                method="post"
                                class="form">
                            {{ form.csrf() }}
                            {{ form.hidden('productId', product.id.hex) }}
                            {{ form.hidden('imageId', image.id.hex) }}

                            <button type="submit" class="button alert"><i class="fa fa-trash"></i> Remove</button>
                        </form>
                    </p>
                </div>
            </div>
        {% endfor %}

        <div class="clearfix"></div>

        <div class="well well-sm">
            <div class="form-group">
                <form action="{{ routeUrl('admin.product.upload-image') }}"
                        method="post"
                        class="form"
                        enctype="multipart/form-data">
                    {{ form.csrf() }}
                    {{ form.hidden('productId', product.id.hex) }}

                    <input type="file" name="image">
                    <button type="submit" class="button"><i class="fa fa-upload"></i> Upload</button>
                </form>
            </div>
        </div>

        <h3>Tag Images:</h3>

        {% for image in product.tagImages %}
            <div class="medium-4 columns">
                <div class="thumbnail">
                    <div class="text-center" style="height: 160px;">
                        <img src="{{ imageUrl(image) }}" style="max-width: 100%; max-height: 100%;" />
                    </div>
                    <br />
                    <p>
                        {% include '@theme/admin/product/parts/set-default-image.twig' %}
                    </p>
                </div>
            </div>
        {% else %}
            No tag images
        {% endfor %}
{% endblock %}
