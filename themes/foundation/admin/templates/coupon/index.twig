{% extends '@admin/layout/base.twig' %}

{% block pageTitle %}Coupons{% endblock %}

{% block content %}
<div class="row column">
    <a href="{{ routeUrl('admin.coupon.new') }}"
        class="button success">
        <i class="fa fa-plus-circle"></i> New Coupon
    </a>

    <h1>Coupons</h1>
    <form action="{{ routeUrl('admin.coupon') }}"
            method="get"
            class="form-search">
        {% include '@admin/helper/search-bar.twig' with {'placeholder': 'Search Name', 'queryString': queryString} only %}
    </form>

    {% include '@store/helper/pagination/pagination-detailed.twig' with {'pagination': pagination} only %}
    {% include '@admin/coupon/parts/coupon-list.twig' with {'coupons': coupons} only %}
    {% include '@store/helper/pagination/pagination-detailed.twig' with {'pagination': pagination} only %}
</div>
{% endblock %}
