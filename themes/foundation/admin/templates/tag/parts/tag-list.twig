{# @var tags \inklabs\kommerce\EntityDTO\TagDTO[] #}
<table class="table stack">
    <thead>
        <tr>
            <td></td>
            <th>Name</th>
            <th>Sort Order</th>
            {% block thead %}{% endblock %}
        </tr>
    </thead>
    <tbody>
        {% for tag in tags %}
            <tr>
                <td>
                    <a href="{{ adminTagUrl(tag) }}">
                        <img src="{{ tagImageUrl(tag) }}"
                             width="50"
                             height="50"
                             style="width: 50px; height: 50px;">
                    </a>
                </td>
                <td>
                    <a href="{{ adminTagUrl(tag) }}">
                        {{ tag.name }}
                    </a>
                <td>{{ tag.sortOrder }}</td>
                {% block tbody %}{% endblock %}
            </tr>
        {% else %}
            <tr>
                <td colspan="100%">
                    <span class="text-muted">No tags.</span>
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
