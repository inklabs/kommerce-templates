{# @var pagination \inklabs\kommerce\EntityDTO\PaginationDTO #}
{# @var queryString string #}
{% extends '@admin/layout/base.twig' %}

{% block pageTitle %}Options{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div>
                    <a href="{{ routeUrl('admin.option.new') }}"
                       class="button success">
                        <i class="fa fa-plus-circle"></i> New Option
                    </a>
                </div>

                <h1>Options</h1>
                <form action="{{ routeUrl('admin.option') }}"
                      method="get"
                      class="form-search">
                    {% include '@admin/helper/search-bar.twig' with {'placeholder': 'Search Name/Email', 'queryString': queryString} only %}
                </form>

                {% include '@store/helper/pagination/pagination-detailed.twig' with {'pagination': pagination} only %}
                {% include '@admin/option/parts/option-list.twig' with {'options': options} only %}
                {% include '@store/helper/pagination/pagination-detailed.twig' with {'pagination': pagination} only %}
            </div>
        </div>
    </div>
{% endblock %}
