<!DOCTYPE html>
<html lang="en">
<head>
    {% include '@store/layout/parts/head.twig' with {
        'pageTitle': block('pageTitle'),
        'pageDescription': block('pageDescription'),
        'pageCanonicalUrl': block('pageCanonicalUrl')
    } %}
</head>
<body class="zk-body">
    {% include '@store/layout/parts/header.twig' %}
    <main class="zk-main-content">
        {% include '@store/layout/parts/base-modal.twig' %}
        {% include '@store/layout/parts/flash-messages.twig' %}
        {% include '@store/layout/parts/breadcrumbs.twig' %}
        {% block content %}{% endblock %}
    </main>
    {% include '@store/layout/parts/footer.twig' %}
    {% include '@store/layout/parts/javascript.twig' %}
    
    {% block extraScripts %}{% endblock %}
</body>
</html>
